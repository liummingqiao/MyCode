page{
  background-color: #f5f5f5;
}
.recordlist {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}
.recordlist_red{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  color: red;
}
.record_names {
  padding-left: 5%;
  width: 60%;
  padding-bottom: 2%;
}
.record_names .names {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
}
.record_names .date {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #aaa;
}
.record_situation {
  height: 150rpx;
  line-height: 150rpx;
  color: #000;
  font-size: 42rpx;
  text-align: center;
  width: 35%;
}
.loading {
  text-align: center;
  height: 200rpx;
  line-height: 200rpx;
  color: #aaa;
}